<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">



    <title>NYC Indie Show List</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand" href="/assets/nycindieshowlist1.jpg"><%= image_tag "nycindieshowlist1.jpg" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active"></li>
        </ul>

        <p class="navbar-text">
          <% if artist_signed_in? %>
            Logged in as <strong><%= current_artist.name %></strong>. <br>|
            <%= link_to('Home', root_path, :class => 'navbar-link') %>  |
            <%= link_to('View profile', artist_path(current_artist), :class => 'navbar-link') %> |
            <%= link_to('Edit profile', edit_artist_path(current_artist), :class => 'navbar-link') %> |

            <%= link_to('Change Password', edit_artist_registration_path, :class => 'navbar-link') %> |
        <br>
            <%= button_to('Logout', destroy_artist_session_path, :method => :delete, :class => 'well')%>
          <% else %>
            <%= link_to "Sign up", new_artist_registration_path, :class => 'navbar-link'  %> |
            <%= link_to "Login", new_artist_session_path, :class => 'navbar-link'  %>
          <% end %>
        </p>


      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <%= yield %>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"> </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
