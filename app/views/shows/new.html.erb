<h1>Post a New Show</h1>

<% if @venue.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@venue.errors.count, "error") %>
      prohibited this post from being updated:
    </h2>

    <ul>
    <% @venue.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@show) do |f| %>
 <%= f.hidden_field :artist_id %>

  <%= f.label :date %>
  <%= f.text_field :date, :placeholder => 'YYYY/MM/DD' %><br>

  <%= f.label :info %>
  <%= f.text_field :info %><br>


  <%= f.label :venue, "Select An Existing Venue" %><br>
  <%= f.collection_select :venue_id, Venue.all, :id, :name, :include_blank => true %><br><br>

  <p>Or Create a New Venue</p>
  <%= fields_for :venue, @show.venue do |f| %>
    <%= render "venues/form", f: f %>

  <% end %>

  <%= f.submit %>

<% end %>
