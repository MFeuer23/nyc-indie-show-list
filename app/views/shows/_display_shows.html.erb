<b>Upcoming Shows:</b><br>
<% if @upcoming %>
  <ul>
  <% @upcoming.each do |show| %>
    <li><%= link_to "#{date_display(show)} at #{show.venue.name}", artist_show_path(show.artist, show) %></li>
  <% end %>
  </ul>
<% end %>

<b>Past Shows:</b><br>
<% if @past %>
  <ul>
  <% @past.each do |show| %>
    <li><%= link_to "#{date_display(show)} at #{show.venue.name}", artist_show_path(show.artist, show) %></li>
  <% end %>
  </ul>
<% end %>
